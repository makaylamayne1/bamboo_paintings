{% section 'homepage' %}
{% section 'navbar' %}

{% paginate collection.products by 12 %}

  <header class="collection-hero">
    <h1 class="collection-title">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="collection-desc">{{ collection.description }}</div>
    {% endif %}
  </header>

  {% if collection.products_count > 0 %}
    <div class="collection-grid">
      {% for product in collection.products %}
        <article class="product-card">
          <a class="product-media" href="{{ product.url | within: collection }}">
            {% if product.featured_image %}
              <img
                class="product-img"
                src="{{ product.featured_image | img_url: '600x' }}"
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
              >
            {% endif %}
          </a>

          <div class="product-body">
            <a class="product-title" href="{{ product.url | within: collection }}">
              {{ product.title }}
            </a>

            <div class="product-meta">
              <span class="product-price">{{ product.price | money }}</span>
              {% unless product.available %}
                <span class="product-badge">Sold out</span>
              {% endunless %}
            </div>

            <a class="product-btn" href="{{ product.url | within: collection }}">
              View
            </a>
          </div>
        </article>
      {% endfor %}
    </div>

    {% if paginate.pages > 1 %}
      <nav class="pagination-wrap">
        {{ paginate | default_pagination }}
      </nav>
    {% endif %}
  {% else %}
    <div class="empty-state">
      <h2 class="empty-title">No matches</h2>
      <p class="empty-text">Try a different collection or check back soon.</p>
    </div>
  {% endif %}

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600;700&display=swap');

    :root{
      --sage: #6a7a5a;
      --beige: #f4e4cd;
      --mint: rgba(170, 220, 190, 0.35);
      --card: rgba(244, 228, 205, 0.22);
      --ink: #1b1b1b;
    }

    /* Page spacing */
    .collection-hero{
      margin: 1.25rem auto 1rem;
      padding: 1.25rem 1rem;
      text-align: center;
      background: linear-gradient(180deg, rgba(244,228,205,0.38), rgba(255,255,255,0));
    }

    .collection-title{
      font-family: 'Cinzel', serif;
      text-transform: uppercase;
      letter-spacing: 0.14em;
      font-weight: 600;
      font-size: clamp(1.6rem, 4.5vw, 2.6rem);
      color: var(--ink);

      text-shadow:
        0 0 10px rgba(247,226,156,0.35),
        0 0 25px rgba(247,226,156,0.20);
      margin: 0;
    }

    .collection-desc{
      margin: 0.75rem auto 0;
      max-width: 780px;
      opacity: 0.85;
      line-height: 1.55;
    }

    /* Grid */
    .collection-grid{
      width: 100%;
      max-width: 1100px;
      margin: 0 auto 2rem;
      padding: 0 1rem;
      box-sizing: border-box;

      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 1.1rem;
    }

    /* Card */
    .product-card{
      background: var(--card);
      border: 3px solid var(--beige);
      border-radius: 1.25rem;
      overflow: hidden;
      box-shadow: 0 10px 28px rgba(0,0,0,0.12);
      transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

    .product-media{
      display: block;
      position: relative;
      overflow: hidden;
      background: rgba(255,255,255,0.55);
    }

    .product-img{
      width: 100%;
      height: 280px;
      object-fit: cover;
      display: block;
      transition: transform 0.6s cubic-bezier(.22,1,.36,1);
    }

    .product-body{
      padding: 0.95rem 0.95rem 1.05rem;
      text-align: center;
    }

    .product-title{
      display: inline-block;
      font-family: 'Cinzel', serif;
      text-transform: uppercase;
      letter-spacing: 0.11em;
      font-weight: 600;
      font-size: 1.05rem;
      color: var(--ink);
      text-decoration: none;
      line-height: 1.25;
      margin-bottom: 0.45rem;
    }

    .product-meta{
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.6rem;
      margin-bottom: 0.8rem;
      flex-wrap: wrap;
    }

    .product-price{
      font-weight: 600;
      color: var(--ink);
      opacity: 0.95;
    }

    .product-badge{
      font-size: 0.8rem;
      padding: 0.25rem 0.6rem;
      border-radius: 9999px;
      background: rgba(255,255,255,0.75);
      border: 1px solid rgba(0,0,0,0.12);
      text-transform: uppercase;
      letter-spacing: 0.08em;
      opacity: 0.9;
    }

    .product-btn{
      display: inline-flex;
      align-items: center;
      justify-content: center;

      background: var(--sage);
      color: white;
      text-decoration: none;

      padding: 0.65rem 1.15rem;
      border-radius: 0.95rem;

      font-weight: 600;
      letter-spacing: 0.05em;
      text-transform: uppercase;

      transition: transform 0.25s ease, box-shadow 0.25s ease, background-color 0.25s ease;
    }

    /* Hover (desktop only) */
    @media (hover:hover){
      .product-card:hover{
        transform: translateY(-6px);
        box-shadow: 0 16px 40px rgba(0,0,0,0.16);
      }
      .product-card:hover .product-img{
        transform: scale(1.06);
      }
      .product-btn:hover{
        transform: translateY(-2px);
        background-color: #7f916b;
        box-shadow:
          0 10px 22px rgba(106, 122, 90, 0.30),
          0 0 18px var(--mint);
      }
    }

    /* Pagination */
    .pagination-wrap{
      display: flex;
      justify-content: center;
      padding: 0 1rem 2rem;
    }

    .pagination-wrap .pagination{
      display: inline-flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .pagination-wrap a,
    .pagination-wrap span{
      display: inline-flex;
      align-items: center;
      justify-content: center;
      min-width: 2.4rem;
      height: 2.4rem;

      padding: 0 0.7rem;
      border-radius: 9999px;
      text-decoration: none;

      border: 2px solid var(--beige);
      background: rgba(255,255,255,0.65);
      color: var(--ink);
    }

    .pagination-wrap span.current{
      background: var(--sage);
      color: white;
      border-color: transparent;
    }

    /* Empty state */
    .empty-state{
      text-align: center;
      padding: 2rem 1rem 3rem;
    }

    .empty-title{
      font-family: 'Cinzel', serif;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      margin-bottom: 0.4rem;
    }

    .empty-text{ opacity: 0.85; }

    /* Responsive */
    @media (max-width: 980px){
      .collection-grid{ grid-template-columns: repeat(2, minmax(0, 1fr)); }
      .product-img{ height: 260px; }
    }

    @media (max-width: 620px){
      .collection-grid{ grid-template-columns: 1fr; }
      .product-img{ height: 240px; }
      .collection-hero{ padding: 1.1rem 0.8rem; }
    }
  </style>

{% endpaginate %}

