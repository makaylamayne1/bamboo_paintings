<!doctype html>
<html lang="en">
  <head>
    <!-- everything in your head stays the same -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{{ page_title }}</title>
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Darumadrop+One&display=swap" rel="stylesheet">
    <link href="https://fonts.cdnfonts.com/css/cinzel" rel="stylesheet">

    {{ 'tailwind.css' | asset_url | stylesheet_tag }}
    {{ 'application.css' | asset_url | stylesheet_tag }}

    {{ content_for_header }}

    <script src="{{ 'application.js' | asset_url }}" defer></script>
  </head>

  <body
    style="--page-bg-color: {{ settings.page_bg_color | default: '#bed2ba' }};"
  >
    <main role="main">
      {{ content_for_layout }}
    </main>
  </body>
</html>
