{% comment %}
  sections/navbar.liquid
{% endcomment %}

<nav
  class="navbar {% if section.settings.enable_nav_bg %}navbar--with-bg{% endif %}"
  style="
    --nav-bg-color: {{ section.settings.nav_bg_color }};
    --nav-link-color: {{ section.settings.nav_link_color }};
    --nav-hover-text: #4F6F52;
    --nav-hover-bg: #DDE9D8;
    --nav-shimmer: rgba(180, 220, 190, 0.9);
  "
  role="navigation"
  aria-label="Main navigation"
>
  {%- if section.settings.menu != blank -%}
    {%- for link in section.settings.menu.links -%}
      <a href="{{ link.url }}" class="nav-link">
        <span class="nav-link-text">{{ link.title }}</span>
      </a>
    {%- endfor -%}
  {%- endif -%}

  {%- if section.settings.show_cart_link -%}
    <a href="{{ routes.cart_url }}" class="nav-link">
      <span class="nav-link-text">
        {{ section.settings.cart_label }}
        {%- if section.settings.show_cart_count -%}
          <span class="cart-count">{{ cart.item_count }}</span>
        {%- endif -%}
      </span>
    </a>
  {%- endif -%}
</nav>

{% style %}
/* ============================= */
/* NAVBAR LAYOUT                 */
/* ============================= */
.navbar {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.6rem;

  width: 100vw;
  position: relative;
  left: 50%;
  margin-left: -50vw;

  padding: 1.2rem 1rem;
  box-sizing: border-box;
}

.navbar--with-bg {
  background-color: var(--nav-bg-color);
}

/* ============================= */
/* LINK CONTAINER                */
/* ============================= */
.nav-link {
  text-decoration: none !important;
  background: transparent;
  border-radius: 9999px;
  cursor: pointer;
  transition: none;
}

/* ============================= */
/* TEXT                          */
/* ============================= */
.nav-link-text {
  position: relative;
  display: inline-flex;
  align-items: center;
  gap: 0.45rem;

  color: var(--nav-link-color) !important;
  padding: 0.2em 0.35em;
  border-radius: 9999px;

  /* calm movement */
  transform: translateY(0);
  transition:
    transform 0.9s cubic-bezier(0.16, 1, 0.3, 1),
    color 0.15s linear;
}

/* ============================= */
/* INSTANT HIGHLIGHT BASE        */
/* ============================= */
.nav-link-text::before {
  content: "";
  position: absolute;
  inset: -0.45em -0.85em;
  background: var(--nav-hover-bg);
  border-radius: 9999px;
  z-index: -1;

  /* IMPORTANT: visible immediately */
  opacity: 0;
  transition: opacity 0.05s linear;
}

/* ============================= */
/* SHIMMER LAYER                 */
/* ============================= */
.nav-link-text::after {
  content: "";
  position: absolute;
  inset: -0.45em -0.85em;
  border-radius: 9999px;
  z-index: -1;

  background: linear-gradient(
    120deg,
    transparent 30%,
    var(--nav-shimmer) 45%,
    transparent 60%
  );

  opacity: 0;
  transform: translateX(-30%);
  transition:
    opacity 0.05s linear,
    transform 1.4s ease;
}

/* ============================= */
/* HOVER â€” INSTANT + SHIMMERY    */
/* ============================= */
@media (hover: hover) and (pointer: fine) {
  .nav-link-text:hover {
    color: var(--nav-hover-text) !important;
    transform: translateY(-1.5px);
  }

  .nav-link-text:hover::before {
    opacity: 1; /* instant */
  }

  .nav-link-text:hover::after {
    opacity: 1;               /* instant */
    transform: translateX(30%); /* slow shimmer sweep */
  }
}

/* ============================= */
/* CART COUNT                    */
/* ============================= */
.cart-count {
  min-width: 1.3em;
  height: 1.3em;
  padding: 0 0.4em;

  display: inline-flex;
  align-items: center;
  justify-content: center;

  font-size: 0.8em;
  border-radius: 9999px;
  background: #DDE9D8;
  color: #2F3F32;
}

/* ============================= */
/* MOBILE                        */
/* ============================= */
@media (max-width: 640px) {
  .navbar {
    padding: 1rem 0.75rem;
    gap: 0.5rem;
  }
}
{% endstyle %}

{% schema %}
{
  "name": "Navbar",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "show_cart_link",
      "label": "Show cart link",
      "default": true
    },
    {
      "type": "text",
      "id": "cart_label",
      "label": "Cart label",
      "default": "Cart"
    },
    {
      "type": "checkbox",
      "id": "show_cart_count",
      "label": "Show cart item count",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_nav_bg",
      "label": "Enable navbar background",
      "default": false
    },
    {
      "type": "color",
      "id": "nav_bg_color",
      "label": "Navbar background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "nav_link_color",
      "label": "Link color",
      "default": "#1F2A24"
    }
  ],
  "presets": [
    { "name": "Navbar" }
  ]
}
{% endschema %}
