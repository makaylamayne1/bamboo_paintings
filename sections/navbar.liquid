{% comment %}
  sections/navbar.liquid
{% endcomment %}

<nav
  class="navbar {% if section.settings.enable_nav_bg %}navbar--with-bg{% endif %}"
  style="
    --nav-bg-color: {{ section.settings.nav_bg_color }};
    --nav-link-color: {{ section.settings.nav_link_color }};
    --nav-hover-text: #4F6F52;   /* bamboo ink */
    --nav-hover-bg: #DDE9D8;     /* bamboo leaf */
  "
  role="navigation"
  aria-label="Main navigation"
>
  {%- if section.settings.menu != blank -%}
    {%- for link in section.settings.menu.links -%}
      <a href="{{ link.url }}" class="nav-link">
        <span class="nav-link-text">{{ link.title }}</span>
      </a>
    {%- endfor -%}
  {%- endif -%}

  {%- if section.settings.show_cart_link -%}
    <a href="{{ routes.cart_url }}" class="nav-link">
      <span class="nav-link-text">
        {{ section.settings.cart_label }}
        {%- if section.settings.show_cart_count -%}
          <span class="cart-count">{{ cart.item_count }}</span>
        {%- endif -%}
      </span>
    </a>
  {%- endif -%}
</nav>

{% style %}
/* FULL-BLEED NAVBAR */
.navbar {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.6rem;

  width: 100vw;
  position: relative;
  left: 50%;
  margin-left: -50vw;

  padding: 1.2rem 1rem;
  box-sizing: border-box;
}

.navbar--with-bg {
  background-color: var(--nav-bg-color);
}

/* LINK CONTAINER */
.navbar .nav-link {
  text-decoration: none !important;
  border-radius: 9999px;
  padding: 0.45rem 1.2rem;
  background: transparent;

  transition:
    background-color 0.25s ease,
    box-shadow 0.25s ease;
}

/* TEXT ITSELF */
.nav-link-text {
  display: inline-flex;
  align-items: center;
  gap: 0.45rem;

  color: var(--nav-link-color) !important;

  /* ðŸ‘‡ starting state */
  transform: translateY(0) scale(1);
  text-shadow: none;

  transition:
    transform 0.25s cubic-bezier(0.22, 1, 0.36, 1),
    text-shadow 0.25s ease,
    color 0.25s ease;
}

/* HOVER: background + POP-UP TEXT */
@media (hover: hover) {
  .navbar .nav-link:hover {
    background-color: var(--nav-hover-bg);
    box-shadow: 0 6px 14px rgba(79, 111, 82, 0.25);
  }

  .navbar .nav-link:hover .nav-link-text {
    color: var(--nav-hover-text) !important;

    /* ðŸ‘‡ POP UP */
    transform: translateY(-4px) scale(1.06);

    text-shadow:
      0 4px 10px rgba(79, 111, 82, 0.35),
      0 1px 2px rgba(0, 0, 0, 0.08);
  }
}

/* TOUCH FEEDBACK */
@media (hover: none) {
  .navbar .nav-link:active {
    background-color: var(--nav-hover-bg);
  }

  .navbar .nav-link:active .nav-link-text {
    transform: translateY(-2px) scale(1.04);
    color: var(--nav-hover-text) !important;
  }
}

/* CART COUNT */
.cart-count {
  min-width: 1.3em;
  height: 1.3em;
  padding: 0 0.4em;

  display: inline-flex;
  align-items: center;
  justify-content: center;

  font-size: 0.8em;
  border-radius: 9999px;
  background: #DDE9D8;
  color: #2F3F32;
}

/* MOBILE */
@media (max-width: 640px) {
  .navbar {
    padding: 1rem 0.75rem;
    gap: 0.5rem;
  }
}
{% endstyle %}

{% schema %}
{
  "name": "Navbar",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "show_cart_link",
      "label": "Show cart link",
      "default": true
    },
    {
      "type": "text",
      "id": "cart_label",
      "label": "Cart label",
      "default": "Cart"
    },
    {
      "type": "checkbox",
      "id": "show_cart_count",
      "label": "Show cart item count",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_nav_bg",
      "label": "Enable navbar background",
      "default": false
    },
    {
      "type": "color",
      "id": "nav_bg_color",
      "label": "Navbar background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "nav_link_color",
      "label": "Link color",
      "default": "#1F2A24"
    }
  ],
  "presets": [
    { "name": "Navbar" }
  ]
}
{% endschema %}
