{% comment %}
  sections/pink_square.liquid
{% endcomment %}

<div class="outer-centering-green">
  <div class="homepage-square-green">
    <div id="heading">{{ section.settings.heading }}</div>
    <div id="heading2">{{ section.settings.heading2 }}</div>

    <form
      method="post"
      action="{{ routes.root_url }}contact#ContactFooter"
      accept-charset="UTF-8"
      class="newsletter-form"
    >
      <input type="hidden" name="form_type" value="customer">
      <input type="hidden" name="utf8" value="âœ“">

      <input
        type="email"
        name="contact[email]"
        placeholder="{{ section.settings.placeholder }}"
        required
        class="newsletter-input"
      >

      <button type="submit" class="newsletter-button">
        {{ section.settings.button_text }}
      </button>
    </form>
  </div>
</div>

{% stylesheet %}
.outer-centering-green { width: 100%; }

/* FULL BLEED */
.homepage-square-green {
  width: 100vw;
  max-width: 100%;

  background-color: #E9EDE5;
  box-shadow: 4px 4px 10px #00000040;
  color: #A8B699;

  box-sizing: border-box;
  overflow: hidden;

  display: grid;
  justify-items: center;
  gap: 0.5rem;

  padding: 1.3rem 1rem 2rem;
}

/* Headings */
#heading {
  font-family: 'Cinzel';
  font-size: 2rem;
  line-height: 1.1;
  margin: 0;
  text-align: center;
}

#heading2 {
  font-family: 'Darumadrop One', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  font-size: 2.5rem;
  line-height: 1.05;
  margin: 0;
  text-align: center;
  color: #A8B699;
}

/* Form (stacked) */
.newsletter-form {
  width: 100%;
  max-width: 520px;
  margin-top: 0.75rem;

  display: flex;
  flex-direction: column;   /* ðŸ‘ˆ forces new line */
  gap: 0.6rem;
  align-items: center;
}

.newsletter-input {
  width: 100%;
  height: 48px;
  border-radius: 1rem;
  padding: 0 1rem;
  border: 0;
  outline: none;

  background-color: whitesmoke;
  color: #6a7a5a;
  font-size: 1.05rem;
  box-sizing: border-box;
  text-align: center;
}

.newsletter-input:focus {
  box-shadow: 0 0 0 3px rgba(247, 226, 156, 0.45);
}

.newsletter-input:hover {
  background-color: #c0d5bb;
  color: #6a7a5a;
}

.newsletter-button {
  width: 100%;              /* ðŸ‘ˆ full width on its own line */
  height: 48px;
  padding: 0 1rem;
  border-radius: 1rem;
  border: 0;
  cursor: pointer;

  background-color: #f4e4cd;;
  color: #6a7a5a;
  font-family: 'Cinzel', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  font-size: 1rem;
  opacity:94%;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.18);
  transition: transform 0.15s ease-out, box-shadow 0.15s ease-out, filter 0.15s ease-out;
}

.newsletter-button:hover {
  transform: translateY(-2px);
  box-shadow: 5px 6px 14px rgba(0, 0, 0, 0.22);
  filter: brightness(0.98);

}

.newsletter-button:active { transform: translateY(0); }

/* MOBILE */
@media (max-width: 640px) {
  .homepage-square-green { padding: 1.2rem 1rem 1.4rem; gap: 0.35rem; }
  #heading { font-size: 1.5rem; }
  #heading2 { font-size: 2rem; }

  .newsletter-input,
  .newsletter-button {
    height: 50px;
    font-size: 1rem;
  }
}
{% endstylesheet %}

{% schema %}
{
  "name": "Text",
  "settings": [
    { "type": "checkbox", "id": "show", "label": "Show bar", "default": true },
    { "type": "text", "id": "heading", "label": "Heading for Email Subscription", "default": "Subscribe" },
    { "type": "text", "id": "heading2", "label": "Heading for Email Subscription 2", "default": "to our emails" },
    { "type": "text", "id": "placeholder", "label": "Email Placeholder Here", "default": "~~Put your email here~~" },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "Join" }
  ],
  "presets": [{ "name": "text" }]
}
{% endschema %}
